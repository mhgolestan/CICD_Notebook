{
  "name": "cicd-note-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && NODE_ENV=test node --test",
    "test:client": "cd client && npm run test",
    "start:test:server": "cd server && NODE_ENV=test node index.js",
    "test:e2e": "concurrently \"npm run start:test:server\" \"npm run dev:client\" \"playwright test\"",
    "build": "cd client && npm run build",
    "eslint": "concurrently \"npm run eslint:server\" \"npm run eslint:client\"",
    "eslint:server": "cd server && eslint .",
    "eslint:client": "cd client && eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.0",
    "@playwright/test": "^1.54.1",
    "@stylistic/eslint-plugin-js": "^1.6.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^1.3.1",
    "concurrently": "^9.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "jsdom": "^24.0.0",
    "json-server": "^0.17.3",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "vite": "^4.4.5",
    "vitest": "^1.3.1",
    "wait-on": "^8.0.4"
  }
}
